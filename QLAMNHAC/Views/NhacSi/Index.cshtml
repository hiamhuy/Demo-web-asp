
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

<h2 class="text" style="text-align:center">Danh sách nhạc sĩ</h2>

@if (TempData["ThongBao"] != null)
{
    <script language="javascript">
       alert("@TempData["ThongBao"]");
    </script>
}

@using (Html.BeginForm("Search", "NhacSi", FormMethod.Get))
{
    <div class="wrap-left">
        <div class="search-group">
            @Html.TextBox("search")<input type="submit" value="Tìm Kiếm" />
        </div>
        <h3 class="wrap-right"><a href="/NhacSi/Create" class="text">Thêm mới nhạc sĩ</a></h3>
    </div>
}

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Tên Nhạc Sĩ</th>
                <th>Năm Sinh</th>
                <th>Quê Quán</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.data)
            {
                <tr>
                    <td>@item.tenNS</td>
                    <td>@item.namS.ToShortDateString()</td>
                    <td>@item.queQ</td>
                    <td>
                        <a href="/NhacSi/Edit?id=@item.Id">Sửa</a> | <a href="/NhacSi/Delete?id=@item.Id">Xóa</a>
                    </td>
                </tr>
            }
    </table>
</div>

