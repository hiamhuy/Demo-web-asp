@model IEnumerable<QLAMNHAC.Models.Nhacsi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

<h2 class="text" style="text-align:center">Danh sách nhạc sĩ</h2>
@using (Html.BeginForm("Index", "NhacSi", FormMethod.Get))
{
    <div class="wrap-left">
        <div class="search-group">
            @Html.TextBox("search")<input type="submit" value="Tìm Kiếm" />
        </div>
    </div>
}

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
              
                <th>Tên Nhạc Sĩ</th>
                <th>Năm Sinh</th>
                <th>Quê Quán</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>Không Có Thông Tin</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.tenNS</td>
                        <td>@item.namS.ToShortDateString()</td>
                        <td>@item.queQ</td>
                        <td>
                            Sửa |
                            Xoá
                        </td>
                    </tr>
                }
            }
</table>
</div>
